{% sw_extends '@Storefront/storefront/page/search/index.html.twig' %}

{% block base_content %}
	{% if config('Clerkio.config.searchPageEnabled') == 'true' %}
		<link href="{{ asset('bundles/clerkio/css/search-page.css') }}" rel="stylesheet">
		<div class="clerk-search-page-container">
			<span
					id="clerk-search"
					class="clerk"
					data-template="@{{ config('Clerkio.config.searchPageContent') ? config('Clerkio.config.searchPageContent')  : 'search-page' }}"
					data-limit="40"
					data-offset="0"
					data-target="#clerk-search-results"
					data-query="{{ page.searchTerm }}"
			{% if config('Clerkio.config.searchCategoriesEnabled') == 'true' %}
					data-search-categories="{{config('Clerkio.config.searchNumberOfCategories')}}"
					data-search-pages="{{config('Clerkio.config.searchNumberOfPages')}}"
					data-serch-pages-types="{{config('Clerkio.config.searchPageTypes')}}"
			{% endif %}		
			{% if config('Clerkio.config.facetedSearchEnabled') == 'true' %}
					data-facets-target="#clerk-search-filters"
					data-facets-attributes='["price","categories","brand"]'
					data-facets-design="{{config('Clerkio.config.facetedSearchDesign')}}"
			{% endif %}
			></span>
			{% if config('Clerkio.config.facetedSearchEnabled') == 'true' %}
				<div id="clerk-search-filters"></div>
			{% endif %}
			<ul id="clerk-search-results"></ul>
		</div>
	{% else %}
		{{ parent() }}
	{% endif %}
{% endblock %}
